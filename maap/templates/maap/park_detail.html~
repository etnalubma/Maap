    <h1>{{object.title}}</h1> 
    <p class="discreet">    
    {% tags_for_object object as tags%}
    {% for tag in tags%}
    {{tag}}
    {% endfor %}
    </p>

    <p>{{object.description|markdown }}</p>

{% endblock %}

