{% extends 'maap/base.html' %}
{% load markup tagging_tags %}

{% block js_onload %}

    baselayer = new Maap.Layer('base',{});
    point = {{object.point.json_dict}};
    baselayer.addPoint(point);
    state.map.addLayers(baselayer.getLayers());
    state.layers['base'] = baselayer;
    
{% endblock %}


